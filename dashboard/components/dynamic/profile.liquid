<!DOCTYPE html>
<html>

<head>
    {% render 'partials/header.liquid', client: client, user: user %}
</head>

<body class="bg-primary-100 font-body">
    {% render 'partials/navbar.liquid', client: client, user: user %}
    <div class="md:flex mt-20 mb-10 pt-10 w-8/12 mx-auto items-center">
        <img src="{{ avatar }}" class="md:mx-0 w-44 rounded-full shadow-md shadow-black-200 mx-auto" />
        <p class="md:text-left text-white text-5xl font-semibold p-5 text-center">{{ user.username }}<b class="text-gray-500 text-base">#{{ user.discriminator }}</b></p>
    </div>
    <div class="lg:block lg:mt-0 border-b border-primary-200 mx-auto md:w-5/12 w-8/12 mt-5"></div>
    <div class="mb-20">
        {% for transcript in ids %}
        <div class="flex m-5 p-4 w-8/12 bg-primary-200 mx-auto rounded-bl-2xl rounded-tr-2xl shadow-lg shadow-black-700">
            <div class="flex justify-content">
                <p class="text-white w-10 md:w-96 truncate pt-2"><i class="fas fa-scroll"></i>&nbsp;{{ transcript }}</p>
            </div>
            <div class="flex justify-end ml-auto">
                <a href="/transcript/{{ transcript }}" class="ease-out-in duration-300 bg-primary-300 py-2 px-10 rounded-full font-semibold text-base text-white hover:bg-primary-700 hover:text-gray-300"><i class="far fa-eye"></i>&nbsp;VIEW</a>
            </div>
        </div>
        {% else %}
            <p class="text-white text-center text-2xl mt-5 font-bold">You haven't participated in any records yet!</p>
        {% endfor %}
    </div>
    <footer>
        <script src="/public/scripts/tailwind.config.js"></script>
        <p class="text-white text-base font-semibold text-center p-5">Chat Recorder ©️ 2022 - 2023</p>
    </footer>
</body>

</html>